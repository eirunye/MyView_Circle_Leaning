<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:eirunye="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyRoundViewActivity">


    <com.eirunye.myview.view.MyRoundView
        android:id="@+id/myRoundView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        eirunye:cx="400"
        eirunye:cy="300"
        eirunye:delay="2000"
        eirunye:pointColor="#CCF0"
        eirunye:pointRadius="20"
        eirunye:roundRadius="200"
        eirunye:roundWidth="5"
        eirunye:roundColor="@color/colorAccent"
        eirunye:pointWidth="5"
        />

</android.support.constraint.ConstraintLayout>